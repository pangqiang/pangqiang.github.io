mixin make_toc(in_sidebar)
    if page.toc && theme.tocMaxDepth > 0
        - var toctext = toc(page.content, {class: "toclist", list_number: false, max_depth: theme.tocMaxDepth})
        if in_sidebar
            .toc-container.in-sidebar
                details.ltr(open)
                    summary= __("TOC")
                    .tocmenu!= toctext
        else
            .toc-container.in-page.animated.fadeInDown
                details.ltr.toc-toggle
                    summary= __("TOC")
                    .tocmenu!= toctext
    